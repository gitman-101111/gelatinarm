<?xml version="1.0" encoding="utf-8"?>

<views:BasePage
    x:Class="Gelatinarm.Views.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="using:Gelatinarm.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{StaticResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="{StaticResource DialogMargin}">
            <TextBlock Text="Sign In"
                       Style="{StaticResource TitleTextStyle}"
                       HorizontalAlignment="Center" />
        </StackPanel>

        <!-- Login Form -->
        <ScrollViewer Grid.Row="1"
                      VerticalScrollBarVisibility="Auto"
                      HorizontalScrollBarVisibility="Disabled">
            <StackPanel HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Width="500"
                        Margin="{StaticResource SectionMargin}">

                <StackPanel Width="350">
                    <TextBlock Text="Username"
                               FontSize="15"
                               Margin="{StaticResource StandardControlMargin}"
                               Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" />
                    <TextBox x:Name="UsernameTextBox"
                             Text="{x:Bind ViewModel.Username, Mode=TwoWay}"
                             TabIndex="1" />
                </StackPanel>

                <StackPanel Width="350" Margin="{StaticResource StandardControlMargin}">
                    <TextBlock Text="Password"
                               FontSize="15"
                               Margin="{StaticResource StandardControlMargin}"
                               Foreground="{StaticResource SystemControlForegroundBaseMediumBrush}" />
                    <PasswordBox x:Name="PasswordBox"
                                 Password="{x:Bind ViewModel.Password, Mode=TwoWay}"
                                 TabIndex="2" />
                </StackPanel>

                <Button Content="Sign In"
                        Command="{x:Bind ViewModel.LoginCommand}"
                        Style="{StaticResource PrimaryButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Width="350"
                        Height="48"
                        FontSize="16"
                        TabIndex="3" />

                <TextBlock Text="- OR -"
                           HorizontalAlignment="Center"
                           Foreground="Gray"
                           Margin="{StaticResource StandardControlMargin}"
                           Style="{StaticResource StandardCaptionTextStyle}" />

                <Button Content="Quick Connect"
                        Command="{x:Bind ViewModel.QuickConnectCommand}"
                        IsEnabled="{x:Bind ViewModel.IsQuickConnectEnabled, Mode=OneWay}"
                        Style="{StaticResource SecondaryButtonStyle}"
                        HorizontalAlignment="Stretch"
                        Width="350"
                        Height="48"
                        FontSize="16"
                        TabIndex="4" />

                <ProgressRing IsActive="{x:Bind ViewModel.IsLoadingRingActive, Mode=OneWay}"
                              Width="64"
                              Height="64" />

                <TextBlock Text="{x:Bind ViewModel.ErrorText, Mode=OneWay}"
                           Foreground="Red"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           Style="{StaticResource StandardCaptionTextStyle}"
                           Visibility="{x:Bind ViewModel.IsErrorVisible, Mode=OneWay}" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</views:BasePage>
