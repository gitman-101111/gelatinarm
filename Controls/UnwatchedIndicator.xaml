<?xml version="1.0" encoding="utf-8"?>

<UserControl
    x:Class="Gelatinarm.Controls.UnwatchedIndicator"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <!-- Triangle indicator for movies -->
        <Polygon x:Name="TriangleIndicator"
                 Points="0,0 30,0 30,30"
                 Fill="{StaticResource UnwatchedIndicatorBrush}"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 Visibility="Collapsed" />

        <!-- Square indicator with count for TV shows -->
        <Border x:Name="SquareIndicator"
                Background="{StaticResource UnwatchedIndicatorBrush}"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                MinWidth="24"
                Height="24"
                Visibility="Collapsed">
            <TextBlock x:Name="CountText"
                       FontSize="12"
                       Foreground="White"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Padding="6,0" />
        </Border>
    </Grid>
</UserControl>
